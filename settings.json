{
  "telemetry.telemetryLevel": "off",
  "workbench.startupEditor": "none",
  "workbench.reduceMotion": "on",
  "workbench.editor.empty.hint": "hidden",
  "workbench.tips.enabled": false,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true, // Enhanced glob for node_modules
    "**/.hg/store/**": true,
    "**/bower_components/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/venv/**": true, // Python virtual environments
    "**/env/**": true, // Other environment folders
    "**/*.pyc": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/__pycache__/**": true,
    "**/*.log": true,
    "**/*.tmp": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/build": true,
    "**/venv": true,
    "**/env": true,
    "**/*.code-search": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/*.log": true,
    "**/*.tmp": true
  },
  "files.autoSave": "off",
  "files.hotExit": "off",
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.hover.enabled": false,
  "editor.smoothScrolling": false,
  "editor.bracketPairColorization.enabled": false,
  "scm.diffDecorations": "none" ,
  "editor.lightbulb.enabled": "off" ,
  "editor.cursorBlinking": "solid",
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "none",
  "editor.suggest.showIcons": false,
  "terminal.integrated.gpuAcceleration": "off",
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.feedback.enabled": false,
  "editor.largeFileOptimizations": false,
  "merge-conflict.codeLens.enabled": false,
  "editor.fontFamily": "Segoe UI",
  "editor.fontSize": 16,
  "typescript.tsserver.web.projectWideIntellisense.enabled": false,
  "editor.suggest.matchOnWordStartOnly": false,
  "editor.suggest.showClasses": false,
  "editor.suggest.showColors": false,
  "editor.suggest.showConstants": false,
  "editor.suggest.showConstructors": false,
  "editor.suggest.showCustomcolors": false,
  "editor.suggest.showDeprecated": false,
  "editor.suggest.showEnumMembers": false,
  "editor.suggest.showEnums": false,
  "editor.suggest.showEvents": false,
  "editor.suggest.showFields": false,
  "editor.suggest.showFiles": false,
  "editor.suggest.showFolders": false,
  "editor.suggest.showFunctions": false,
  "editor.suggest.showInterfaces": false,
  "editor.suggest.showIssues": false,
  "editor.suggest.showMethods": false,
  "editor.suggest.showKeywords": false,
  "editor.suggest.showModules": false,
  "editor.suggest.showOperators": false,
  "editor.suggest.showProperties": false,
  "editor.suggest.showReferences": false,
  "editor.suggest.showSnippets": false,
  "editor.suggest.showStructs": false,
  "editor.suggest.showTypeParameters": false,
  "editor.suggest.showUnits": false,
  "editor.suggest.showUsers": false,
  "editor.suggest.showValues": false,
  "editor.suggest.showVariables": false,
  "editor.suggest.showWords": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.web.typeAcquisition.enabled": false,
  "window.restoreWindows": "preserve",
}